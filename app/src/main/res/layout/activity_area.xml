<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_area"
    android:background="#4390f8"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leechaelin.hw_3.area">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:weightSum="9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평이나 면적을 입력하세요. "
            android:textSize="15dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fadfdf"
            android:id="@+id/edittext3"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <TextView
            android:hint="계산결과가 없습니다."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:background="#d1d1d2"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <Button
            android:onClick="myClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평을 제곱미터로 변환"
            android:background="#3668d2"
            android:textColor="#ffffff"
            android:id="@+id/button2"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
        <Button
            android:onClick="myClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64b72e"
            android:text="제곱미터를 평으로 변환 "
            android:layout_margin="10dp"
            android:id="@+id/button3"
            android:layout_weight="1"/>







    </LinearLayout>
</LinearLayout>
